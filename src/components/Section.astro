---
interface Props {
  id: string;
  title: string;
}
let { id, title } = Astro.props;
---

<section
  id={id}
  class="mx-auto px-4 container lg:max-w-6xl py-16"
  style="margin-top: -5rem; padding-top: 5rem;"
>
  <div>
    <h2 class="text-2xl font-bold">{title}</h2>
  </div>
  <div class="mt-8">
    <slot />
  </div>
</section>
